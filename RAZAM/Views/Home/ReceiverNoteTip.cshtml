@model RAZAM.Models.UserNote
<div class="slider_item" id=@Model.id>
    <div class="card @Model.Status">
        <div class="card-body mx-2 my-2">
            @Html.HiddenFor(Model => Model.Status)
            <h5 class="card-title">
                From
                @Model.SenderName
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Name</h6>
            <p class="card-text">@Model.Description</p>
            <button class="deflectLink button" value="deflected">Deflect</button>
            <button class="acceptLink button" value="accepted">Accept</button>
            <button class="executeLink button" value="executed">Done</button>
        </div>
    </div>
</div>
