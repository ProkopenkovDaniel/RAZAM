@model RAZAM.Models.File
<div class="row FileTip Tip">
    <div class="col-lg-3">@Model.Date.ToShortDateString() @Model.Date.ToShortTimeString()</div>
    <div class="col-lg-4">@Model.Name</div>
    <div class="col-lg-3">@Model.User.UserName</div>
    <div class="col-lg-1">
        @using (Html.BeginForm("DownloadFile/" + Model.Id.ToString(), "Home", FormMethod.Get))
        {
            <button>D</button>
        }
    </div>
    <div class="col-lg-1">
        @using (Html.BeginForm("DelFile/" + Model.Id.ToString(), "Home", FormMethod.Get))
        {
            <button>X</button>
        }
    </div>
</div>
